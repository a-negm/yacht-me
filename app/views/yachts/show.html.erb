<%= render 'shared/navbar' %>
<section id='hero'>
  <% if @yacht.photo.attached? %>
     <%= cl_image_tag @yacht.photo.key, width: 1920, crop: :fill %>
  <% else %>
  <%= image_tag "https://duckduckgo.com/i/b31649e7.jpg", alt: "alttext" %>
  <% end %>
</section>
<div class="container-fluid">
  <div class="row" id='showHeader'>
    <div class='col d-flex flex-row justify-content-between align-items-center mt-5'>
    <div class='d-flex flex-row align-items-baseline'>
      <h1><%= @yacht.name %></h1>
      <h2 class='ml-5'><%= @yacht.rental_price %>â‚¬/night</h2>
      <h3>
        <div class='ml-5'>
          <h2 class="fas fa-users"></h2>
          <%= @yacht.guests %>
        </div>
      </h3>
    </div>
      <div>
        <%= link_to "Book this Yacht", new_yacht_booking_path(@yacht), class: "btn btn-primary btn-large btn-lg btn-search" %>
      </div>
    </div>
      <!-- <a href="#" class="btn btn-primary">Book this Yacht</a> -->
  </div>
  <div class="row justify-content-between mt-3" id='showBody'>
    <div class="col-8">
      <p><%= @yacht.description %></p>
    </div>
    <div class="col-4">
    <%= render 'specs' %>
    </div>
    <div class="review">
      <% @reviews.each do |review| %>
        <%= review.content %>
      <% end %>
    </div>

    <div class="create-review">
      <%= simple_form_for([@bookings, @review]) do |f|%>
      <%= f.input :content %>
      <%= f.input :rating %>
      <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
