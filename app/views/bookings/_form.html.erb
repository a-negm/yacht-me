<%= simple_form_for [@yacht, @booking], url: yacht_bookings_path do |f| %>
<div class="row justify-content-center">
<%= f.input :check_in_date,
             as: :string, order: [:day, :month, :year], required: true, input_html: {class: "datepicker"} %>
</div>
<div class="row justify-content-center">
<%= f.input :check_out_date, as: :string, order: [:day, :month, :year], required: true, input_html: {class: "datepicker"}%>
</div>
<div class="row justify-content-center">
  <%= f.input :number_of_guests, collection: 1..yacht.guests %>
</div>
<div class="row justify-content-center">
<%= f.submit class: 'btn btn-primary form-btn' %>
</div>
<% end %>

